@model UserRoleViewModel
@{
    <h3>Manage User Role </h3>

    <table class="table table-striped table-bordered">


        <tr>
            <td>@Model.CurrentUser.FullName</td>

            <td>@Model.CurrentUser.Email</td>

            @foreach (var item in Model.UserRoles)
            {
                <td>@item</td>
            }
        </tr>




    </table>

    <hr />
    <h3 class="text-bg-primary">User Roles</h3>

    <form method="post" asp-action="UserRole">
        <div asp-validation-summary="All" class="text-danger">



            <input type="hidden" value="@Model.CurrentUser.Id" name="id" />
            @foreach (var item in Model.Roles)
            {
                <input type="checkbox" checked="@Model.UserRoles.Contains(item.Name)" name="Roles" value="@item.Name" />
                <label>@item.Name</label>
            }
            <div class="py-2">
                <button type="submit" class="btn btn-primary">UpdateRole</button>
            </div>

        </div>

    </form>
}
